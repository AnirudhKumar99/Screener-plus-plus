generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Screener {
  id              String            @id @default(uuid())
  name            String
  url             String
  wallet          Wallet?
  portfolios      Portfolio[]
  transactions    Transaction[]
  netWorthHistory NetWorthHistory[]
}

model Wallet {
  id          Int      @id @default(autoincrement())
  screenerId  String   @unique
  screener    Screener @relation(fields: [screenerId], references: [id], onDelete: Cascade)
  cashBalance Float
  lastUpdated DateTime @default(now())
}

model Portfolio {
  screenerId  String
  screener    Screener @relation(fields: [screenerId], references: [id], onDelete: Cascade)
  stockCode   String
  companyName String
  qty         Int
  avgBuyPrice Float
  lastUpdated DateTime @default(now())

  @@id([screenerId, stockCode])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  screenerId String
  screener  Screener @relation(fields: [screenerId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  stockCode String
  action    String   // "BUY" or "SELL"
  qty       Int
  price     Float
  fees      Float
}

model NetWorthHistory {
  id            Int      @id @default(autoincrement())
  screenerId    String
  screener      Screener @relation(fields: [screenerId], references: [id], onDelete: Cascade)
  recordDate    DateTime @default(now())
  totalNetWorth Float

  @@unique([screenerId, recordDate])
}
